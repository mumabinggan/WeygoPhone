<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="baseServiceActivity_Anim" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/s</item>
        <item name="android:activityOpenExitAnimation">@anim/s</item>
        <item name="android:activityCloseEnterAnimation">@anim/s</item>
        <item name="android:activityCloseExitAnimation">@anim/s</item>
    </style>

    <style
        name="Theme.IOSched"
        parent="android:style/Theme.Light">
        <item
            name="android:windowNoTitle">true</item>
        <item
            name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Style_TabBar_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textColor">@drawable/tabbar_item_text_color</item>
    </style>

    <style name="Transparent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    //ShowDialog
    <!-- my loading dialog -->
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/loaddialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/loaddialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.goodDetail.widget.WGGoodDetailOperateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x38"
    android:paddingLeft="@dimen/x14"
    android:paddingRight="@dimen/x14"
    android:background="#00ff00">

    <LinearLayout
        android:id="@+id/goodCountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x9">

        <include
            android:id="@+id/goodCountView"
            layout="@layout/common_goodcountview" />

    </LinearLayout>

    <ImageView
        android:id="@+id/collectionIV"
        android:layout_width="@dimen/x17"
        android:layout_height="@dimen/x15"
        android:layout_marginTop="@dimen/x11"
        android:layout_alignParentRight="true"
        android:src="@drawable/gooddetail_collection_normal"/>

    <Button
        android:id="@+id/addShopCartBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:layout_marginTop="@dimen/x7"
        android:textSize="@dimen/ft12"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/goodCountLayout"
        android:layout_marginRight="@dimen/x15"
        android:layout_toLeftOf="@+id/collectionIV"
        android:layout_marginLeft="@dimen/x15"
        android:text="@string/GoodDetail_Add"
        android:background="@drawable/wggooddetail_add_bg" />


</com.weygo.weygophone.pages.goodDetail.widget.WGGoodDetailOperateView>
<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.common.widget.WGIntegrationHelpView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/x292"
        android:layout_height="@dimen/x282"
        android:background="@drawable/integration_help_bg">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="@dimen/ft14"
            android:text="@string/Integration_Help_Title"
            android:background="@color/WGAppBaseTitleAAAAColor"/>

        <TextView
            android:id="@+id/contentTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/titleTV"
            android:layout_marginTop="@dimen/x9"
            android:textColor="@color/WGAppBaseTitleAAColor"
            android:textSize="@dimen/ft13"
            android:maxLines = "1000"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16" />

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x27"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            android:textColor="#ffffff"
            android:textSize="@dimen/ft12"
            android:text="@string/Integration_Help_Button"
            android:background="@drawable/common_insert_cap_confirm_bg"/>

    </RelativeLayout>

</com.weygo.weygophone.common.widget.WGIntegrationHelpView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x96"
    android:background="@drawable/slider_background">

    <LinearLayout
        android:id="@+id/scanMessageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@drawable/slider_scan" />
            
            <View
                android:layout_width="@dimen/x10"
                android:layout_height="@dimen/x3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:textColor="#ffffff"
                android:textSize="@dimen/ft12"
                android:text="@string/Slider_Mine_Scan" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@drawable/slider_messagecenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:textColor="#ffffff"
                android:textSize="@dimen/ft12"
                android:text="@string/Slider_Mine_MessageCenter"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_below="@+id/scanMessageView">

        <ImageView
        android:id="@+id/headImageView"
        android:layout_width="@dimen/x41"
        android:layout_height="@dimen/x41"
        android:layout_marginLeft="@dimen/x13"
        android:layout_marginTop="@dimen/x7" />

        <ImageView
        android:id="@+id/arrImageView"
        android:layout_width="@dimen/x6"
        android:layout_height="@dimen/x10"
        android:layout_alignParentRight="true"
        android:layout_marginRight= "@dimen/x13"
        android:layout_marginTop="@dimen/x22"
        android:src="@drawable/common_right_arr"/>

        <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/arrImageView"
        android:layout_toRightOf="@+id/headImageView"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginRight="@dimen/x7"
        android:layout_alignTop="@+id/headImageView"
        android:layout_alignBottom="@+id/headImageView"
        android:gravity="center_vertical"
            android:textColor="#ffffff"
        android:textSize="@dimen/ft12"
        />

    </RelativeLayout>

</RelativeLayout>
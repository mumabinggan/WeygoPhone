<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.common.widget.WGPostPopView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/x212"
        android:layout_height="@dimen/x228"
        android:background="@drawable/shopcart_failure_good_bg">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/x53"
            android:layout_height="@dimen/x53"
            android:src="@drawable/tab_mine_location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"/>

        <TextView
            android:id="@+id/cap_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="@dimen/x12"
            android:textColor="#61000000"
            android:textAlignment="center"
            android:textSize="@dimen/ft13"
            android:text="@string/Insert_Cap_Des"/>

        <EditText
            android:id="@+id/inputCapET"
            android:layout_width="@dimen/x176"
            android:layout_height="@dimen/x27"
            android:background="#ffffff"
            android:hint="@string/Insert_Cap"
            android:textColorHint="#61000000"
            android:layout_below="@+id/cap_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x12"
            android:textAlignment="center"
            android:textSize="@dimen/ft13"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/capErrorTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/inputCapET"
            android:layout_marginTop="@dimen/x9"
            android:textColor="#ff0000"
            android:textAlignment="center"
            android:textSize="@dimen/ft13"
            android:text="@string/Insert_Cap_Error"/>
        
        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="@dimen/x144"
            android:layout_height="@dimen/x27"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/capErrorTV"
            android:layout_marginTop="@dimen/x9"
            android:textColor="#ffffff"
            android:textSize="@dimen/ft12"
            android:text="@string/Collection_Delete_OK"
            android:background="@drawable/common_insert_cap_confirm_bg"/>

    </RelativeLayout>


</com.weygo.weygophone.common.widget.WGPostPopView>
<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.tabs.home.widget.WGHomeContentTopicItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x90"
    android:layout_height="@dimen/x99">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x7"
        android:layout_marginTop="@dimen/x7"
        android:layout_marginBottom="@dimen/x7"
        android:background="@drawable/common_topic_special_item_bg"
        android:clipChildren="true"
        android:clipToPadding="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/x41"
            android:layout_height="@dimen/x41"
            android:layout_marginLeft="@dimen/x21"
            android:layout_marginTop="@dimen/x7"/>

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x34"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:maxLines="2"
            android:textSize="@dimen/ft12"
            android:textColor="@color/WGAppBaseTitleAColor"
            android:textAlignment="center"
            android:lines="2"/>

    </RelativeLayout>

</com.weygo.weygophone.pages.tabs.home.widget.WGHomeContentTopicItemView>
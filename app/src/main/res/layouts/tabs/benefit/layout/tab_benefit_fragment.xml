<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/benefit_navigationBar"
        layout="@layout/home_navigationbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/contentView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.weygo.weygophone.pages.common.widget.WGSegmentView
                android:id="@+id/benefit_segmentView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x38"
                ></com.weygo.weygophone.pages.common.widget.WGSegmentView>

            <android.support.v4.view.ViewPager
                android:id="@+id/benefit_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.shopcart.widget.WGShopCartItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x106"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/x89"
        android:layout_height="@dimen/x106"
        android:layout_marginLeft="@dimen/x7"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x17"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x11"
        android:layout_marginRight="@dimen/x14"/>

    <TextView
        android:id="@+id/briefTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignRight="@+id/nameTextView"
        android:layout_marginTop="@dimen/x5"
        />

    <RelativeLayout
        android:id="@+id/priceView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x19"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignRight="@id/nameTextView"
        android:layout_below="@+id/briefTextView"
        android:layout_marginTop="@dimen/x5"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/currentPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/WGAppBaseColor"
            android:textSize="@dimen/ft14"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/originPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/currentPriceTextView"
            android:layout_marginLeft="@dimen/x7"
            android:textColor="@color/WGAppBaseTitleAAAColor"
            android:textSize="@dimen/ft10"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/reducePriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x14"
            android:layout_toRightOf="@+id/originPriceTextView"
            android:layout_marginLeft="@dimen/x7"
            android:textColor="@color/WGAppBaseTitleAAAColor"
            android:textSize="@dimen/ft10"
            android:background="@drawable/common_good_price_bg"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

    </RelativeLayout>

    <include
        android:id="@+id/addView"
        android:layout_width="@dimen/x80"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/priceView"
        android:layout_below="@+id/priceView"
        android:layout_marginTop="@dimen/x5"
        layout="@layout/common_addgood" />

</com.weygo.weygophone.pages.shopcart.widget.WGShopCartItemView>
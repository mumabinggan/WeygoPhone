<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.order.detail.widget.WGOrderDetailUserInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/userTitleTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x34"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x14"
        android:text="@string/OrderDetail_Deliver_Info"
        android:background="#f8fafa"
        android:textColor="@color/WGAppBaseTitleAColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x17"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x14"
            android:paddingLeft="@dimen/x14"
            android:textColor="@color/WGAppBaseTitleAAColor"/>

        <TextView
            android:id="@+id/addressTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x17"
            android:gravity="center_vertical"
            android:layout_below="@+id/nameTV"
            android:paddingLeft="@dimen/x14"
            android:textColor="@color/WGAppBaseTitleAAColor"/>

        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x17"
            android:gravity="center_vertical"
            android:layout_below="@+id/addressTV"
            android:paddingLeft="@dimen/x14"
            android:textColor="@color/WGAppBaseTitleAAColor"/>

        <TextView
            android:id="@+id/timeTV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x17"
            android:gravity="center_vertical"
            android:layout_below="@+id/phoneTV"
            android:layout_marginBottom="@dimen/x14"
            android:paddingLeft="@dimen/x14"
            android:textColor="@color/WGAppBaseTitleAAColor"/>

    </RelativeLayout>

</com.weygo.weygophone.pages.order.detail.widget.WGOrderDetailUserInfoView>
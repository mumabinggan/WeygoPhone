<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.order.detail.widget.WGOrderDetailGoodItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/goodItemView"
        layout="@layout/wggood_list_item" />

    <TextView
        android:id="@+id/totalPriceTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x34"
        android:gravity="center_vertical"
        android:layout_below="@+id/goodItemView"
        android:paddingLeft="@dimen/x14"
        android:background="#F8FAFA"
        android:textSize="@dimen/ft12"
        android:text="@string/OrderDetail_Good_Total_Price"
        android:textColor="@color/WGAppBaseTitleAAAColor"/>

    <TextView
        android:id="@+id/totalPriceTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x34"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/totalPriceTitleTV"
        android:layout_marginRight="@dimen/x160"
        android:background="#F8FAFA"
        android:textSize="@dimen/ft14"
        android:textColor="@color/WGAppBaseColor"
        android:layout_below="@+id/goodItemView"/>

    <TextView
        android:id="@+id/priceTV"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x34"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x160"
        android:layout_below="@+id/goodItemView"
        android:background="#FFFFFF"
        android:textSize="@dimen/ft10"
        android:textAlignment="center"
        android:textColor="@color/WGAppBaseTitleAAAColor"/>

    <TextView
        android:id="@+id/reducePriceTV"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x34"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/goodItemView"
        android:background="#FFFFFF"
        android:textSize="@dimen/ft10"
        android:textAlignment="center"
        android:textColor="@color/WGAppBaseTitleAAAColor"/>

</com.weygo.weygophone.pages.order.detail.widget.WGOrderDetailGoodItemView>
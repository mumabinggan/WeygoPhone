<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.order.commit.widget.WGCommitOrderCouponView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="@dimen/x82">
    
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x68"
        android:layout_gravity="center"
        android:src="@drawable/commitorder_coupon_bg"
        android:layout_marginTop="@dimen/x7"/>

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x68"
        android:maxLines="1"
        android:textSize="@dimen/ft12"
        android:textColor="#000000"
        android:gravity="center_vertical|left"
        android:layout_marginTop="@dimen/x7"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x20" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x26"
        android:maxLines="1"
        android:gravity="left"
        android:textSize="@dimen/ft12"
        android:textColor="#000000"
        android:layout_marginTop="@dimen/x19"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x20"
        android:text="@string/CommitOrder_No_Coupon_Title"/>

    <TextView
        android:id="@+id/tipsTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x26"
        android:maxLines="1"
        android:textSize="@dimen/ft12"
        android:textColor="#000000"
        android:gravity="left"
        android:layout_below="@+id/titleTV"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignParentBottom="true"
        android:text="@string/CommitOrder_No_Coupon_SubTitle"/>

    <ImageView
        android:id="@+id/arrImageView"
        android:layout_width="@dimen/x6"
        android:layout_height="@dimen/x10"
        android:layout_alignParentRight="true"
        android:layout_marginRight= "@dimen/x13"
        android:layout_marginTop="@dimen/x36"
        android:src="@drawable/common_right_arr"/>

</com.weygo.weygophone.pages.order.commit.widget.WGCommitOrderCouponView>
<?xml version="1.0" encoding="utf-8"?>
<com.weygo.weygophone.pages.order.commit.widget.WGCommitOrderReceiptView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x85"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/arrImageView"
        android:layout_width="@dimen/x6"
        android:layout_height="@dimen/x10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x15"
        android:src="@drawable/common_right_arr" />

    <TextView
        android:id="@+id/addressTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x13"
        android:layout_toLeftOf="@id/arrImageView"
        android:layout_marginRight="@dimen/x5"
        android:textSize="@dimen/ft12"
        android:maxLines="1"
        android:textColor="@color/WGAppBaseTitleAAAColor" />

    <TextView
        android:id="@+id/companyTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:layout_alignLeft="@+id/addressTV"
        android:layout_alignRight="@+id/addressTV"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/addressTV"
        android:textSize="@dimen/ft12"
        android:textColor="@color/WGAppBaseTitleAAAColor"
        />

    <TextView
        android:id="@+id/taxTV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:layout_alignLeft="@+id/companyTV"
        android:layout_alignRight="@+id/companyTV"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/addressTV"
        android:textSize="@dimen/ft12"
        android:textColor="@color/WGAppBaseTitleAAAColor"
        />

</com.weygo.weygophone.pages.order.commit.widget.WGCommitOrderReceiptView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="@dimen/x265"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/x21"
                        android:layout_height="@dimen/x21"
                        android:src="@drawable/italian_icon"/>

                    <TextView
                        android:layout_width="@dimen/x51"
                        android:layout_height="@dimen/x21"
                        android:text="+39"
                        android:textColor="@color/WGAppBaseTitleAAAColor"
                        android:textSize="@dimen/ft12"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:hint="@string/Register_Phone"
                        android:textColorHint="@color/WGAppBaseTitleAAAColor"
                        android:background="@null"
                        android:textSize="@dimen/ft12"
                        android:textColor="@color/WGAppBaseTitleAColor"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/codeEditText"
                        android:layout_width="@dimen/x162"
                        android:layout_height="@dimen/x41"
                        android:hint="@string/Register_GetCodeText"
                        android:textColorHint="@color/WGAppBaseTitleAAAColor"
                        android:background="@null"
                        android:textSize="@dimen/ft12"
                        android:textColor="@color/WGAppBaseTitleAColor"
                        />

                    <TextView
                        android:id="@+id/codeTextView"
                        android:layout_width="@dimen/x102"
                        android:layout_height="@dimen/x21"
                        android:text="@string/Register_GetCodeBtn"
                        android:textColor="@color/WGAppBlueButtonColor"
                        android:textSize="@dimen/ft10"
                        android:gravity="center"
                        android:background="@drawable/common_verification_code_btn_bg"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x41"
                    android:hint="@string/Register_LastName"
                    android:textColorHint="@color/WGAppBaseTitleAAAColor"
                    android:background="@null"
                    android:textSize="@dimen/ft12"
                    android:textColor="@color/WGAppBaseTitleAColor"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <EditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x41"
                    android:hint="@string/Register_FirstName"
                    android:textColorHint="@color/WGAppBaseTitleAAAColor"
                    android:background="@null"
                    android:textSize="@dimen/ft12"
                    android:textColor="@color/WGAppBaseTitleAColor"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x41"
                    android:hint="@string/Register_Email"
                    android:textCursorDrawable="@null"
                    android:textColorHint="@color/WGAppBaseTitleAAAColor"
                    android:background="@null"
                    android:textSize="@dimen/ft12"
                    android:textColor="@color/WGAppBaseTitleAColor"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x41"
                    android:hint="@string/Register_Password"
                    android:textColorHint="@color/WGAppBaseTitleAAAColor"
                    android:background="@null"
                    android:textSize="@dimen/ft12"
                    android:textColor="@color/WGAppBaseTitleAColor"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <EditText
                    android:id="@+id/confirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x41"
                    android:hint="@string/Register_ConfirmPW"
                    android:textColorHint="@color/WGAppBaseTitleAAAColor"
                    android:background="@null"
                    android:textSize="@dimen/ft12"
                    android:textColor="@color/WGAppBaseTitleAColor"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/navigaiotnBar_separate_color"></View>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x21"></View>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x34"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/ft12"
                    android:background="@drawable/register_btn_bg"
                    android:text="@string/CommitOrder_OverHeight_Confirm"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"></View>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/base_titlebar"
        layout="@layout/common_navigationbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/companyET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Cognome"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <include
                        android:id="@+id/countryView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        layout="@layout/common_cell_type4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/phoneET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Telefono_Cellulare"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/addressET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Indirizzo"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/streetET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Numero_civico"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/cityET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Citta"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/capET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_CAP"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                    <EditText
                        android:id="@+id/codiceET"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x41"
                        android:textColor="#000000"
                        android:textSize="@dimen/ft12"
                        android:hint="@string/Address_Citofono"
                        android:background="@null"
                        android:paddingLeft="@dimen/x13"
                        android:paddingRight="@dimen/x13"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/separate_color"></View>

                </LinearLayout>


            </ScrollView>
            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x48"
                android:gravity="center"
                android:background="#ffffff"
                android:paddingLeft="@dimen/x13"
                android:paddingRight="@dimen/x13">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/separate_color"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/commitBtn"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x34"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/ft12"
                        android:layout_marginLeft="@dimen/x13"
                        android:background="@drawable/register_btn_bg"
                        android:text="@string/Fax_Apply"/>

                    <Button
                        android:id="@+id/cancelBtn"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/x34"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/ft12"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x13"
                        android:background="@drawable/login_btn_bg"
                        android:text="@string/Fax_Cancel"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        
        <!--<ImageView-->
            <!--android:id="@+id/addIV"-->
            <!--android:layout_width="@dimen/x60"-->
            <!--android:layout_height="@dimen/x60"-->
            <!--android:background="#00ff00"/>-->

    </FrameLayout>

</LinearLayout>